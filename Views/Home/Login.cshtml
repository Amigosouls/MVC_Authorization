@model MVC_Authorization.Models.UserRole

<style>
    .error{
        background-color:black;
        color:red;
        font-weight:800;
        font-size:18px;
    }
</style>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="error">@ViewBag.Msg</div>
<div class="card">
        <div class="card-header bg-primary">
            Login form
        </div>
       
        <div class="card-body">
            <div class="form-group">
                @Html.LabelFor(m => m.user_email)
                @Html.TextBoxFor(m => m.user_email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.user_email)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.user_pass)
                @Html.TextBoxFor(m => m.user_pass, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.user_pass)
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Login</button>
                @Html.ActionLink("New user","Register")
            </div>
        </div>
    </div>
}
